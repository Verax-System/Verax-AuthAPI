# Adapte com suas credenciais de banco de dados
DATABASE_URL="postgresql+asyncpg://postgres:Admin123@localhost:5432/auth" # Use um DB novo!
# Gere uma chave forte (ex: openssl rand -hex 32)
SECRET_KEY="SUA_CHAVE_SECRETA_FORTE_AQUI"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60 # Tempo de validade do token de acesso (em minutos)

REFRESH_SECRET_KEY="UMA_CHAVE_SECRETA_DIFERENTE_E_FORTE_AQUI_PARA_REFRESH" # Use outra chave forte!
REFRESH_TOKEN_EXPIRE_DAYS=7 # Ex: Válido por 7 dias

# --- Configurações de Email ---
EMAIL_HOST="smtp.mailtrap.io"      # Ou smtp.gmail.com, etc.
EMAIL_PORT=2525                    # Ou 587 para Gmail TLS, 465 para SSL
EMAIL_USERNAME="seu_usuario_smtp"  # Usuário do Mailtrap ou seu email Gmail
EMAIL_PASSWORD="sua_senha_smtp"    # Senha do Mailtrap ou Senha de App do Gmail
EMAIL_FROM="naoresponda@suaauthapi.com" # Email remetente
EMAIL_FROM_NAME="Auth API"         # Nome do remetente
EMAIL_USE_TLS=true                 # Use true para Gmail/Mailtrap (porta 587 ou 2525)
# EMAIL_USE_SSL=false              # Use true se usar porta 465

# URL base do frontend onde o usuário clicará no link (AJUSTE CONFORME NECESSÁRIO)
VERIFICATION_URL_BASE="http://localhost:3000/verify-email" # Ou a URL do seu frontend